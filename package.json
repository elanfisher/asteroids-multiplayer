{
  "name": "multiplayer-asteroids",
  "version": "1.0.0",
  "description": "A secure multiplayer Asteroids game with AI players",
  "main": "server.js",
  "scripts": {
    "start": "node server.js",
    "dev": "nodemon server.js",
    "test": "node test-game.js",
    "test:visible": "HEADLESS=false node test-game.js",
    "docker:dev": "./run-docker.sh development",
    "docker:prod": "./run-docker.sh production",
    "docker:test": "docker compose --profile test run --rm test",
    "docker:test:visible": "TEST_HEADLESS=false docker compose --profile test run --rm test"
  },
  "dependencies": {
    "bcrypt": "^5.1.1",
    "connect-mongo": "^5.1.0",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "express-rate-limit": "^7.1.5",
    "express-session": "^1.17.3",
    "helmet": "^7.1.0",
    "mongodb": "^6.3.0",
    "mongoose": "^8.0.3",
    "socket.io": "^4.7.2",
    "uuid": "^9.0.1"
  },
  "devDependencies": {
    "axios": "^1.8.1",
    "nodemon": "^3.0.2"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
